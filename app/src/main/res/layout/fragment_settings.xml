<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.changfeng.taptapword.SettingsFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.rey.material.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:padding="10dp"
            android:longClickable="false"
            android:text="@string/reset_preferences"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#673AB7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rey.material.widget.TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:text="@string/reset_all_data"
                android:textSize="20sp"/>

            <com.rey.material.widget.CheckBox
                android:id="@+id/reset_all_data"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rey.material.widget.TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:text="@string/reset_all_preference"
                android:textSize="20sp"/>

            <com.rey.material.widget.CheckBox
                android:id="@+id/reset_all_preferences"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="20dp"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
